{
    "code-runner.executorMap": {
        "c": "cd $dir && make  && ./$fileNameWithoutExt && make clean",
        "cpp": "cd $dir && make  && ./$fileNameWithoutExt && make clean"
    },
    "editor.renderWhitespace": "all",
    "editor.renderLineHighlight": "all",
    "editor.formatOnSave": true,
    "code-runner.runInTerminal": true,
    "code-runner.ignoreSelection": true,
    "code-runner.enableAppInsights": false,
    "C_Cpp.updateChannel": "Insiders",
    "[makefile]": {
        "editor.insertSpaces": true
    },
    "C_Cpp.default.includePath": [
        "/usr/local/opt/opencv@3/include",
        "/usr/local/Cellar/opencv@3/3.4.12_3/include/"
    ],
    "files.associations": {
        "iostream": "cpp",
        "fstream": "cpp",
        "sstream": "cpp",
        "deque": "cpp",
        "list": "cpp",
        "string": "cpp",
        "valarray": "cpp",
        "vector": "cpp",
        "*.tcc": "cpp",
        "locale": "cpp",
        "random": "cpp",
        "__config": "cpp",
        "map": "cpp",
        "ios": "cpp",
        "iosfwd": "cpp",
        "istream": "cpp",
        "functional": "cpp",
        "chrono": "cpp",
        "string_view": "cpp",
        "__debug": "cpp",
        "__locale": "cpp",
        "algorithm": "cpp",
        "atomic": "cpp",
        "bitset": "cpp",
        "cctype": "cpp",
        "cstddef": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "cwchar": "cpp",
        "iomanip": "cpp",
        "iterator": "cpp",
        "memory": "cpp",
        "mutex": "cpp",
        "ostream": "cpp",
        "stack": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "system_error": "cpp",
        "type_traits": "cpp",
        "utility": "cpp"
    }
}